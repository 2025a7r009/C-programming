#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int getfact(int n){
    int fact=1;
    for (int i=1; i<=n; i++){
        fact=fact*i;
    }
    return fact;
}

int main() {
    int num,sum=0;
    scanf("%d",&num);
     for (int i=1; i<=num; i++){
         sum+=getfact(i);
     }
    printf("%d",sum);
    
    return 0;
}
